{
  "name": "baby-steps-app",
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "https://babysteps-backend.onrender.com",
    "REACT_APP_ADSENSE_CLIENT_ID": "ca-pub-1934622676928053"
  },
  "functions": {
    "frontend/build/static/js/*.js": {
      "maxDuration": 30
    }
  }
}